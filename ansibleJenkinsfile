
pipeline{
    agent any
parameters{
    string(name:"ip_addess", defaultValue:"none")
}
    stages{
        stage("git checkout stage"){
            steps{
                git url:'https://github.com/sanju02g/devops_auto.git' , branch:'kubernetes'
            }
        }
        stage("tearraform stage"){
            steps{
                sshagent(['terraform']) {
                sh ''' ssh -o StrictHostKeyChecking=no ec2-user@"$ip_addess" 
                    scp -r ./ansible/* ec2-user@"$ip_addess":/home/ec2-user/
                    ssh -o StrictHostKeyChecking=no ec2-user@"$ip_addess" "ansible-playbook playbook.yml"
                '''
            }
        }
    }
}
}
