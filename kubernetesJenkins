pipeline{
    agent any
environment{
  dockerimagename= "nginx/latest"
  dockerimage= ""
}
    stages{
        stage("git checkout stage"){
            steps{
                git url:'https://github.com/sanju02g/devops_auto.git' , branch:'kubernetes'
            }
        }
       stage("create docker image") {
            steps {
                script {
                    sh "cd ansible"
                    dockerimage = sudo docker.build("nginx:latest")
                }
            }
        }
}
}
