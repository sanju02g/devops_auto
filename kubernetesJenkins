pipeline{
    agent any
environment{
  dockerimagename= "nginx/latest"
  dockerimage= ""
}
    stages{
        stage("git checkout stage"){
            steps{
                git url:'https://github.com/sanju02g/devops_auto.git' , branch:'kubernetes'
            }
        }
       stage("create docker image"){
          steps{
            sshagent(['demo']) {
             sh "ssh ec2-user@54.172.101.24 'git clone https://github.com/sanju02g/devops_auto.git; sudo docker build -t  nginx/latest .'"
                    }
          }
       }
}
}
